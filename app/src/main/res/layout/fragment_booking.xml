<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Запис на:"
            android:textSize="22sp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/nyght_serif"
            android:textColor="@color/small_text" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvSelectMaster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оберіть майстра:"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nyght_serif"
            android:textColor="@color/small_text" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="always"
            android:scrollbars="none"
            tools:ignore="SpeakableTextPresent">

            <LinearLayout
                android:id="@+id/mastersContainer"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@drawable/bg_divider_vertical"
                android:showDividers="middle"
                android:paddingVertical="8dp" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tvTimeSlotsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Доступні години:"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nyght_serif"
            android:textColor="@color/small_text" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="always"
            android:scrollbars="none"
            tools:ignore="SpeakableTextPresent">

            <LinearLayout
                android:id="@+id/timeSlotsContainer"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@drawable/bg_divider_vertical"
                android:showDividers="middle"
                android:paddingVertical="8dp"
                android:layout_marginRight="10dp"/>
        </HorizontalScrollView>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_rounded"
            android:enabled="false"
            android:text="Підтвердити запис"
            android:textColor="@android:color/white"
            android:textSize="27dp" />



    </LinearLayout>
</ScrollView>
