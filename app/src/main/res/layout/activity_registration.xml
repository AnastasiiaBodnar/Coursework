<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/nyght_serif"
        android:text="Реєстрація:"
        android:textColor="@color/small_text"
        android:textSize="45dp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_edit_text"
        android:fontFamily="@font/nyght_serif"
        android:hint="Ім'я"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="@color/small_text"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etSurname"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_edit_text"
        android:fontFamily="@font/nyght_serif"
        android:hint="Прізвище"
        android:textColor="@color/small_text"
        android:textSize="20dp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_edit_text"
        android:fontFamily="@font/nyght_serif"
        android:hint="Номер телефону"
        android:textColor="@color/small_text"
        android:textSize="20dp"
        android:inputType="phone"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etLogin"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_edit_text"
        android:fontFamily="@font/nyght_serif"
        android:hint="Логін"
        android:textColor="@color/small_text"
        android:textSize="20dp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_edit_text"
        android:fontFamily="@font/nyght_serif"
        android:hint="Пароль"
        android:textColor="@color/small_text"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_rounded" android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="@font/nyght_serif"
        android:text="Далі"
        android:textSize="32dp"/>
</LinearLayout>
