<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/services"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white">
        <TextView
            android:layout_marginTop="30dp"
            android:text="Послуги та ціни"
            android:textSize="28sp"
            android:textColor="@color/small_text"
            android:fontFamily="@font/josefinslab_bold"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/nav_bag"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:text="Стрижки"
            android:textSize="24sp"
            android:textColor="@color/logo_text"
            android:fontFamily="@font/josefinslab_bold"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@color/nav_bag"
            android:padding="16dp">

            <TextView
                android:text="Жіноча стрижка"
                android:textSize="18sp"
                android:textColor="@color/small_text"
                android:fontFamily="@font/josefinslab_bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="450 грн"
                android:textSize="20sp"
                android:textColor="@color/logo_text"
                android:fontFamily="@font/josefinslab_bold"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <Button
                android:text="Записатися"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/button"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@color/nav_bag"
            android:padding="16dp">

            <TextView
                android:text="Чоловіча стрижка"
                android:textSize="18sp"
                android:textColor="@color/small_text"
                android:fontFamily="@font/josefinslab_bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="350 грн"
                android:textSize="20sp"
                android:textColor="@color/logo_text"
                android:fontFamily="@font/josefinslab_bold"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <Button
                android:text="Записатися"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/button"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@color/nav_bag"
            android:padding="16dp">

            <TextView
                android:text="Дитяча стрижка (до 12 років)"
                android:textSize="18sp"
                android:textColor="@color/small_text"
                android:fontFamily="@font/josefinslab_bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="300 грн"
                android:textSize="20sp"
                android:textColor="@color/logo_text"
                android:fontFamily="@font/josefinslab_bold"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <Button
                android:text="Записатися"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/button"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:text="Фарбування"
            android:textSize="24sp"
            android:textColor="@color/logo_text"
            android:fontFamily="@font/josefinslab_bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@color/nav_bag"
            android:padding="16dp">

            <TextView
                android:text="Повне фарбування (довжина до плечей)"
                android:textSize="18sp"
                android:textColor="@color/small_text"
                android:fontFamily="@font/josefinslab_bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="1200 грн"
                android:textSize="20sp"
                android:textColor="@color/logo_text"
                android:fontFamily="@font/josefinslab_bold"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <Button
                android:text="Записатися"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/button"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@color/nav_bag"
            android:padding="16dp">

            <TextView
                android:text="Тонування волосся"
                android:textSize="18sp"
                android:textColor="@color/small_text"
                android:fontFamily="@font/josefinslab_bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="800 грн"
                android:textSize="20sp"
                android:textColor="@color/logo_text"
                android:fontFamily="@font/josefinslab_bold"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="Тонування - це щадний спосіб змінити колір волосся або оновити існуючий відтінок."
                android:textSize="14sp"
                android:textColor="@color/small_text"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <Button
                android:text="Записатися"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/button"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@color/nav_bag"
            android:padding="16dp">

            <TextView
                android:text="Міліровування/Омбр"
                android:textSize="18sp"
                android:textColor="@color/small_text"
                android:fontFamily="@font/josefinslab_bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:text="1500 грн"
                android:textSize="20sp"
                android:textColor="@color/logo_text"
                android:fontFamily="@font/josefinslab_bold"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <Button
                android:text="Записатися"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/button"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>