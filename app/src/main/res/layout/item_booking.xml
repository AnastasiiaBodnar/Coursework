<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/nav_bag"
    android:layout_marginBottom="12dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvServiceName"
        android:text="Послуга: Стрижка"
        android:textColor="@color/logo_text"
        android:textSize="20sp"
        android:fontFamily="@font/nyght_serif"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDateTime"
        android:text="Дата: 28.04.2025 • 14:00"
        android:textColor="@color/small_text"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/calypso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvMaster"
        android:text="Майстер: Марія"
        android:textColor="@color/small_text"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/calypso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvStatus"
        android:text="Статус: Підтверджено"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/nyght_serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:text="Відмінити"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</LinearLayout>
