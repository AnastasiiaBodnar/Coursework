<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_change_masters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="admin.ChangeMastersActivity">

    <Button
        android:id="@+id/btnAddMaster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Додати майстра"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nyght_serif"
        android:background="@drawable/btn_rounded"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="Список майстрів" />

</LinearLayout>
